# procura pelo conteúdo de arquivos de uma extensão
#
# uso: grepext <busca> <extensao>
# exemplo: grepex class php
grepext() {

  if [ ! $# -eq 2 ]; then
    echo "uso: grepext <busca> <extensao>"
    return 1;
  fi

  grep -inE "$1" `find . -name "*.$2"`
}

