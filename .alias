alias ls="ls --color=auto"
alias ll="ls -lah"
alias grep="grep --color"

alias ..="cd .."
alias ....="cd ../.."
alias ......="cd ../../.."

# força interatividade
alias rm="rm -i"
alias mv="mv -i"
alias cp="cp -i"
alias ln="ln -i"

# history
alias hism="history | more"
alias hisl="history | less"
alias hisg="history | grep -i"

# sistema
alias desligar="systemctl poweroff"
alias reiniciar="systemctl reboot"

# Python
alias py="python"
alias manage="python $VIRTUAL_ENV/manage.py"
alias virtualenv3="virtualenv -p /usr/bin/python3"

# Diretórios
alias rmrf="rm -rf" # força exclusão de diretório
